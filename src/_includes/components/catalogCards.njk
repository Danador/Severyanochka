            <img class="max-w-[160px] mx-auto max-h-[160px]" src="/assets/images/dorblue.jpg" alt="залупа-ебаная">
            <button class="absolute top-0 right-0 flex items-center justify-center w-8 h-8 mt-2 mr-2 rounded hover:bg-red-500/40 bg-desert-storm-2">
                <svg class="absolute w-4 h-4 text-outrageous-orange">
                    <use xlink:href="/assets/icons/all-icons.svg#heart"></use>
                </svg>
            </button>
        </div>
        <div>
            <a href="#">
                <div class="mb-6">
                    <span class="font-bold text-m-d text-tundora dark:text-white">139,99₽</span>
                </div>
                <div class="grid">
                    <p class="font-semibold tracking-tight text-s-d text-tundora dark:text-white">Комбайн КЗС-1218 </p>
                    <p class="font-semibold tracking-tight text-s-d text-tundora dark:text-white">«ДЕСНА-ПОЛЕСЬЕ GS12»</p>
                </div>
            </a>
            <div class="flex items-center mt-4 mb-2">
                {% for item in range(0,5) %}
                    <svg class="w-4 h-4 text-outrageous-orange">
